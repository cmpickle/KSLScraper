<Window x:Class="KSLScraper.Configuration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSLScraper"
        mc:Ignorable="d"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Configuration" Height="600" Width="800">
    <StackPanel>
        <Label Content="SMTP Email" />
        <TextBox Name="txtEmail" />
        <Label Content="SMTP Email Password" />
        <TextBox Name="txtPassword" />
        <Label Content="Destination Email/Phone" />
        <TextBox Name="txtDestination" />
    </StackPanel>
</Window>
